{% extends "base.html.twig" %}
{% block title %}Annonces{% endblock %}
{% block body %}
    
    <!-- [ Main Content ] start -->
    <div class="pcoded-main-container">
        <div class="pcoded-wrapper">
            <div class="pcoded-content">
                <div class="pcoded-inner-content">
                    <!-- [ breadcrumb ] start -->

                    {# {% include "/ad_admin/partials/_alert.html.twig" %} #}

                    <!-- [ breadcrumb ] end -->
                    <div class="main-body">
                        <div class="page-wrapper">
                            <!-- [ Main Content ] start -->
                            <div class="row">
                                <!--[ year  sales section ] end-->
                                <!-- [ Hover-table ] start -->

                                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_ADVERTISER')%}

                                    <div class="col-xl-12">
                                        <div class="card">
                                            <div class="card-header">
                                                <h5>Annonces</h5>
                                                <a class="btn btn-success" href="{{ path('advertisement_new') }}">
                                                    <i class="fas fa-plus">
                                                    </i>
                                                    Ajouter
                                                </a>
                                            </div>
                                            <div class="card-block table-border-style">
                                                <div class="table-responsive">
                                                    <table class="table table-hover">
                                                        <thead>
                                                            <tr>
                                                                <th>#</th>
                                                                <th>Titre</th>
                                                                <th>statut</th>
                                                                <th>Annonceur</th>
                                                                <th>Date de création</th>
                                                                {# <th>Aperçu</th> #}
                                                                <th>Actions</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            {% if is_granted('ROLE_ADMIN') %}

                                                                {% if advertisements|length > 0 %}
                                                                    {% include "ad_admin/advertisement/index.html.twig.filter/_ad_filter_admin.html.twig" %}
                                                                    {% else %}
                                                                        <tr>
                                                                            <td valign="top" colspan="9">
                                                                                Aucune annonce n'a encore été enregistrée, cliquez <a href="{{ path('advertisement_new')}}">ici...</a> pour en ajouter.
                                                                            </td>
                                                                        <tr>
                                                                {% endif %}
                                                                    {% elseif is_granted('ROLE_ADVERTISER') %}
                                                                        {% if advertisementsByUser|length > 0 %}
                                                                            {% include "ad_admin/advertisement/index.html.twig.filter/_ad_filter_advertiser.html.twig" %}
                                                                            {% else %}
                                                                                <tr>
                                                                                    <td valign="top" colspan="9">
                                                                                        Aucune annonce n'a encore été enregistrée, cliquez <a href="{{ path('advertisement_new')}}">ici...</a> pour en ajouter.
                                                                                    </td>
                                                                                <tr>
                                                                        {% endif %}
                                                                {% else %}
                                                                Vous n'êtes pas autorisé.
                                                            {% endif %}
                                                            
                                                        </tbody>
                                                        <tfoot>
                                                            <tr>
                                                                <th>#</th>
                                                                <th>Titre</th>
                                                                <th>statut</th>
                                                                <th>Annonceur</th>
                                                                <th>Date de création</th>
                                                                {# <th>Aperçu</th> #}
                                                                <th>Actions</th>
                                                            </tr>
                                                        </tfoot>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    {% else %}
                                    Vous n'avez pas les droits nécessaires pour afficher ce contenu.
                                {% endif %}
                                <!-- [ Hover-table ] end -->
                            </div>
                            <!-- [ Main Content ] end -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
        
{% endblock %}
    
